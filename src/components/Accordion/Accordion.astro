---
import type { HTMLAttributes } from "astro/types";
type Props = HTMLAttributes<"ul">;
const { class: className, ...other } = Astro.props;
---

<ul
	{...other}
	is="accordion-container"
	class:list={[
		"flex flex-col text-primary-50 gap-2 md:gap-4 h-160 w-full menu-opafocus justify-center md:flex-row",
		className,
	]}
>
	<slot />
</ul>

<script>
import importInView from "@utils/importInView/importInView";

importInView("[is=accordion-container]", ()=>import("./customElement"))
</script>
