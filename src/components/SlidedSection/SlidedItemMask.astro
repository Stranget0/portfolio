---
interface Props{
	bleedClass:string
}
const {bleedClass} = Astro.props
---
<div
									class:list={[
										"mask",
										"absolute bottom-0 w-full h-30vh",
										bleedClass,
									]}
									data-static-vh="30vh"
								/>
								

<style lang="scss">
	.mask {
		display: none;
		@media (height > theme("breakpoints.md")) {
			display: block;
		}
	}
</style>