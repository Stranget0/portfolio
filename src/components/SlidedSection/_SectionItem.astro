---
import type { HTMLAttributes } from "astro/types";
import SectionClip from "@components/SectionClip.astro";

type Props = HTMLAttributes<"div">;

export type SectionItemProps = Props;

const { class: className,  ...other } = Astro.props;
---

<scroll-reference
{...other}
	class:list={[
		"relative pt-0 pb-0 w-full block bleed flex",
		className,
	]}>
	<SectionClip class="flex flex-col items-center w-full">
		<slot />
	</SectionClip>
	</scroll-reference>
