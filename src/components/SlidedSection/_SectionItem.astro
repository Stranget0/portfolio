---
import type { HTMLAttributes } from "astro/types";
import SectionClip from "@components/SlidedSection/_SectionClip.astro";

type Props = HTMLAttributes<"div">;

export type SectionItemProps = Props;

const { class: className,  ...other } = Astro.props;
---

<scroll-reference
{...other}
	class:list={[
		"relative p-16 pt-0 pb-0 min-h-100vh w-full block bleed",
		className,
	]}
	data-static-vh="100vh"
	data-static-vh-type="min">
	<SectionClip class="flex flex-col items-center">
		<slot />
	</SectionClip>
	</scroll-reference>
