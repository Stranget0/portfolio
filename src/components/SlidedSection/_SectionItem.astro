---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"div">;

export type SectionItemProps = Props;

const { class: className,  ...other } = Astro.props;
---

<scroll-reference
{...other}
	class:list={[
		"relative p-16 pt-0 min-h-100vh w-full block bleed flex flex-col items-center",
		className,
	]}
	data-static-vh="100vh"
	data-static-vh-type="min"><slot /></scroll-reference
>
