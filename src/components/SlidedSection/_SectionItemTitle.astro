---
import AppearingLine from "@components/AppearingText/AppearingLine.astro";
import SectionTopSticky from "@components/SlidedSection/_SectionTopSticky.astro"

import type { HTMLAttributes } from "astro/types";

interface Props extends Omit<HTMLAttributes<"h3">, "title"> {
	title: string;
}
const { title, ...other } = Astro.props;
---
<SectionTopSticky>
	<AppearingLine
	{...other as any}
	as="h3"
	text={title}
	class="text-subtitle-2 solid-text-shadow"
	group={2}
	animatedOnView
	/>
</SectionTopSticky>