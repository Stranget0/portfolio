---
import AppearingLine from "@components/AppearingText/AppearingLine.astro";

import type { HTMLAttributes } from "astro/types";
import classNames from "classnames";

interface Props extends Omit<HTMLAttributes<"h3">, "title"> {
	title: string;
	href?: string;
}

const { title, class: className, href, ...other } = Astro.props;
const Tag = href ? "a" : "h3";
const WrapperTag = Tag === "a" ? "h3" : "div";

---

<WrapperTag>
	<AppearingLine
		{...other as any}
		as={Tag}
		href={href}
		text={title}
		class={classNames("text-subtitle-2 solid-text-shadow", className)}
		group={2}
		animatedOnView
	/>
</WrapperTag>
