---
import Button from "@components/Button/Button.astro";
import type { HTMLAttributes } from "astro/types";
import classNames from "classnames";
interface Props extends HTMLAttributes<"a"> {
	label: string;
	href: string;
	iconClass: string;
	wrapperClass?: string;
}
const {
	href,
	iconClass,
	label,
	class: className,
	wrapperClass,
	...other
} = Astro.props;
---

<Button
	{...other as any}
	size="small"
	visualType="outline"
	as="a"
	href={href}
	target={href.startsWith("#") ? undefined : "_blank"}
	class={classNames([
		"text-label menu-opafocus-option flex-center w-max uppercase font-serif",
		className,
	])}
	aria-label={label}
	title={label}
>
	<div class:list={["flex-center gap-1em text-xs", wrapperClass]}>
		<div class:list={["w-6 h-6 flex-shrink-0", iconClass]}></div>
	</div>
</Button>
