---
import SectionLink from "./_SectionLink.astro";

interface Props {
	website?: string;
	github?: string;
}

const { github, website } = Astro.props;
---

<nav
	class="pointer-events-auto flex flex-col h-max relative gap-4 menu-opafocus mr-4 2xl:flex-row"
>
	<SectionLink
		href="#contact"
		labelShort="Call me"
		label="help me make more!"
		wrapperClass="text-xs"
		iconClass="i-mingcute-message-3-fill"
	/>
	{
		website && (
			<SectionLink
				href={website}
				label="website"
				iconClass="i-mingcute-earth-line"
			/>
		)
	}
	{
		github && (
			<SectionLink
				href={github}
				label="github"
				iconClass="i-mingcute-github-fill"
			/>
		)
	}
</nav>
