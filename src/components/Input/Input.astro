---
import type { HTMLAttributes } from "astro/types";
import InputWrapper from "./InputWrapper.astro";

type Props = HTMLAttributes<"input"> & {
	id: string;
	label: string;
	name: string;
	wrapperClass?: string;
};

const { label, name, class: className, wrapperClass, ...other } = Astro.props;

const common = { name, ...other };
---

<InputWrapper for={common.id} label={label} class={wrapperClass}>
	<input {...common} class:list={["bg-transparent", className]} />
</InputWrapper>
