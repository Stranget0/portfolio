---
import type { HTMLAttributes } from "astro/types";
import InputWrapper from "./InputWrapper.astro";

type Props = Omit<HTMLAttributes<"input">, "autocomplete"> & {
	id: string;
	label: string;
	name: string;
	wrapperClass?: string;
	autocomplete?: boolean;
};

const {
	label,
	name,
	class: className,
	wrapperClass,
	autocomplete,
	...other
} = Astro.props;

const common = { name, ...other };
---

<InputWrapper for={common.id} label={label} class={wrapperClass}>
	<input
		{...common}
		autocomplete={autocomplete ? "true" : undefined}
		class:list={["bg-transparent", className]}
	/>
</InputWrapper>
