---
import type { HTMLAttributes } from "astro/types";
import InputWrapper from "./InputWrapper.astro";
import classNames from "classnames";

type Props = HTMLAttributes<"textarea"> & {
	id: string;
	label: string;
	wrapperClass?: string;
};

const { label, class: className, wrapperClass, ...other } = Astro.props;

const common = { name: other.id, ...other };
---

<InputWrapper
	for={common.id}
	label={label}
	class={classNames("flex-1", wrapperClass)}
>
	<textarea
		{...common}
		class:list={["bg-transparent resize-none h-50 flex-1", className]}
	></textarea>
</InputWrapper>
