---
import AppearingText, {  Tag } from "@components/AppearingText.astro";
import type { DynamicTextT } from "src/utilTypes/text";

interface Props {
	text: DynamicTextT;
	tag?: Tag;
	class?: string;
}
const { text, tag: Element = "p", ...other } = Astro.props;
---

{
	typeof text === "string" ? (
		<Element {...other}>{text}</Element>
	) : (
		<AppearingText text={text} tag={Element} {...other} />
	)
}
