---
import type { HTMLTag } from "astro/types";
import type { ButtonProps } from "./types";
import { buttonClass } from "./utils";

type Props<T extends HTMLTag = "button"> = ButtonProps<T>;

const {
	visualType = "simple",
	class: className,
	as: Tag = "button",
	size = "default",
	invertColor,
	classOverride,
	targetSelector,
	targetClassToggle,
	closeType,
	...rest
} = Astro.props;
---

<Tag
	class={buttonClass({
		class: className,
		classOverride,
		invertColor,
		size,
		visualType,
	})}
	data-target-selector={targetSelector}
	data-target-class-toggle={targetClassToggle}
	data-close-type={closeType}
	{...rest as any}
>
	<slot>LOREM IPSUM NIHIL NOVI</slot>
</Tag>

<script>
	import "./buttonFunctionality";
</script>
