---
import type { HTMLTag } from "astro/types";
import type { ButtonProps } from "./types";
import { buttonClass } from "./utils";

type Props<T extends HTMLTag = "button"> = ButtonProps<T>

const {
	visualType = "simple",
	class: className,
	as: Tag = "button",
	size = "default",
	invertColor,
	classOverride,
	...rest
} = Astro.props;
---

<Tag
	class={buttonClass({
		class: className,
		classOverride,
		invertColor,
		size,
		visualType,
	})}
	{...rest as any}
>
	<slot>LOREM IPSUM NIHIL NOVI</slot>
</Tag>
