---
import type { Polymorphic } from "astro/types";
import type { TextTag } from "./types";

type Props<T extends TextTag> = Polymorphic<{ as: T }> & {
	wordTimings: number[];
};

const { tag: Tag = "p", wordTimings, ...other } = Astro.props;
---

<!-- TODO: Fix typing error -->
<Tag {...other as any} data-text-timings={wordTimings}>
	<slot />
</Tag>
