---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<T extends HTMLTag> = Polymorphic<{ as: T }> & {
	wordTimings: number[];
};

const { as: Tag = "p", wordTimings, ...other } = Astro.props;
---

<!-- TODO: Fix typing error -->
<Tag {...other as any} data-text-timings={wordTimings}>
	<slot />
</Tag>
