---
import Header from "../components/Header.astro";
import SEO from "../components/SEO.astro";
import "@unocss/reset/tailwind-compat.css";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<SEO />
	</head>
	<body theme-default font-sans primary-100>
		<div
			class="-z-100 fixed inset-0 from-[var(--primary-950)] to-[var(--secondary-950)] filter brightness-40 min-h-screen"
			bg-gradient="linear to-br"
		>
		</div>
		<Header />
		<main data-taxi>
			<slot />
		</main>
	</body>
</html>
