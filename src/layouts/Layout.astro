---
import SVGFilters from "@components/SVGFilters.astro";
import Header from "../components/Header.astro";
import SEO from "../components/SEO.astro";
import "@unocss/reset/tailwind-compat.css";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<style is:global>
			:where(button) {
				background-color: transparent;
			}
		</style>
		<SEO />
	</head>
	<body theme-default font-sans text-primary-100>
		<SVGFilters />
		<div
			class="-z-100 fixed inset-0 from-primary-950 to-accent-950 filter brightness-40 min-h-screen layer-noise"
			bg-gradient="linear to-br"
		>
		</div>
		<Header />
		<main data-taxi>
			<slot />
		</main>
	</body>
</html>
